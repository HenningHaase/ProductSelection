<aura:component controller="Lookup" implements="force:appHostable,flexipage:availableForAllPageTypes"> 
    
    <aura:attribute name="options" type="String" default="Nothing" />
    <aura:attribute name="productList"  type="List"/>
    <aura:handler name="myComponentEvent" event="c:AddProduct" action="{!c.handleMyComponentEvent}"/>
    <c:Lookup />
    <div class="slds-p-top_large">  
    <aura:iteration var="product" items="{!v.productList}">
      <article class="slds-card">
      <div class="slds-card__header slds-grid">
        <header class="slds-media slds-media_center slds-has-flexi-truncate">
      	<lightning:icon iconName="utility:metrics"/> 
          <div class="slds-p-left_small">
          <div class="slds-media__body">			
              <h2> 
              <a href="javascript:void(0);" class="slds-card__header-link slds-truncate" title="[object Object]">
                <span class="slds-text-heading_small">  Produkt: {!product.ProductName}</span>
              </a>
              </h2>
          </div>
        </div>
       </header>
      </div>
      <div class="slds-card__body slds-card__body_inner">Bitte geben Sie die Werbeart, das erste Erscheinungsdatum sowie die Laufzeit des Produktes an.</div>
          <div class="slds-card__body slds-card__body_inner"><c:MonthSlider /></div>
      <footer class="slds-card__footer"></footer>
    </article>  
       
   

	</aura:iteration>
 </div>    
</aura:component>